[user]
  name = Jeroen Vankelecom
  email = jeroen.vankelecom@robovision.eu
[core]
  editor = vim
  excludesfile = ~/.gitignore
  autocrlf = input
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[web]
  browser = google-chrome
[push]
  default = simple
[merge]
  tool = kdiff3
[difftool]
  prompt = false
[alias]
  br = branch
  c = commit
  ca = commit -a
  cm = commit -m
  cam = commit -am
  co = checkout
  d = diff
  dc = diff --cached
  l = log --graph --pretty=format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset" --abbrev-commit
  last = log -1 HEAD
  st = status
  unstage = reset HEAD
  visual = !gitk
[pager]
	branch = false
